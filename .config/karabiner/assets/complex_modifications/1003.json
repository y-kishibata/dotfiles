{
  "title": "[WIP] For Vim Arrow Emuration（Vim向けの設定 矢印キーエミュレート） (rev 1)",
  "rules": [
    {
      "description": "Fn＋hjklを押した場合に矢印キーにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [ "fn" ],
              "optional": [ "any" ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [ "fn" ],
              "optional": [ "any" ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [ "fn" ],
              "optional": [ "any" ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [ "fn" ],
              "optional": [ "any" ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        }
      ]
    }
  ]
}
